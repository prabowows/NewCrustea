{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "ponds": {
      ".read": "auth != null",
      "$pondId": {
        ".read": "auth != null",
        // Izinkan tulis jika pengguna membuat data baru ATAU
        // jika pengguna sudah menjadi pemilik data yang ada (untuk update/delete).
        ".write": "auth != null && (!data.exists() || root.child('user_ponds/' + auth.uid + '/' + $pondId).exists())"
      }
    },
    "devices": {
      ".read": "auth != null"
    },
    "sc_devices": {
      ".read": "auth != null"
    },
    "user_ponds": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "pond_devices": {
      // Izinkan pengguna yang memiliki kolam untuk membaca atau menulis daftar perangkat di dalamnya.
      "$pondId": {
        ".read": "root.child('user_ponds/' + auth.uid + '/' + $pondId).exists()",
        ".write": "root.child('user_ponds/' + auth.uid + '/' + $pondId).exists()"
      }
    },
    "device_data": {
      "$deviceId": {
        ".read": "auth != null"
      }
    },
    "device_commands": {
      "$deviceId": {
        ".write": "root.child('devices/' + $deviceId + '/pond_id').exists() && root.child('user_ponds/' + auth.uid + '/' + root.child('devices/' + $deviceId + '/pond_id').val()).exists()",
        ".read": "root.child('devices/' + $deviceId + '/pond_id').exists() && root.child('user_ponds/' + auth.uid + '/' + root.child('devices/' + $deviceId + '/pond_id').val()).exists()"
      }
    },
    "Historical": {
      "$deviceId": {
        ".read": "auth != null"
      }
    }
  }
}
