{
  "rules": {
    "Device": {
      "$deviceId": {
        // Users can only read/write their own device data.
        // The id_user in the data must match the logged-in user's uid.
        ".read": "auth != null && root.child('Device/' + $deviceId + '/id_user').val() === auth.uid",
        ".write": "auth != null && root.child('Device/' + $deviceId + '/id_user').val() === auth.uid"
      }
    },
    "Kolam": {
      // Assuming similar ownership logic for "Kolam"
      "$kolamId": {
        ".read": "auth != null && root.child('Kolam/' + $kolamId + '/id_user').val() === auth.uid",
        ".write": "auth != null && root.child('Kolam/' + $kolamId + '/id_user').val() === auth.uid"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
