{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "ponds": {
      ".read": "auth != null"
    },
    "devices": {
      ".read": "auth != null"
    },
    "sc_devices": {
      ".read": "auth != null"
    },
    "user_ponds": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "pond_devices": {
      ".read": "auth != null"
    },
    "device_data": {
      "$deviceId": {
        // Izinkan baca jika pengguna memiliki akses ke kolam tempat perangkat ini berada.
        ".read": "root.child('devices/' + $deviceId + '/pond_id').exists() && root.child('user_ponds/' + auth.uid + '/' + root.child('devices/' + $deviceId + '/pond_id').val()).exists()"
      }
    },
    "device_commands": {
      "$deviceId": {
        // Izinkan tulis jika pengguna memiliki akses ke kolam tempat perangkat ini berada.
        ".write": "root.child('devices/' + $deviceId + '/pond_id').exists() && root.child('user_ponds/' + auth.uid + '/' + root.child('devices/' + $deviceId + '/pond_id').val()).exists()",
        ".read": "root.child('devices/' + $deviceId + '/pond_id').exists() && root.child('user_ponds/' + auth.uid + '/' + root.child('devices/' + $deviceId + '/pond_id').val()).exists()"
      }
    }
  }
}
