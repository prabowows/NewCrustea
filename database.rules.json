{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "ponds": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "devices": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "sc_devices": {
      ".read": "auth != null"
    },
    "user_ponds": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "pond_devices": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$pondId": {
        ".read": "root.child('user_ponds/' + auth.uid + '/' + $pondId).exists()",
        ".write": "root.child('user_ponds/' + auth.uid + '/' + $pondId).exists()"
      }
    },
    "device_data": {
      "$deviceId": {
        // Izinkan pengguna terotentikasi untuk membaca data perangkat apa pun.
        // Ini diperlukan untuk halaman aerator untuk memeriksa status.
        ".read": "auth != null"
      }
    },
    "device_commands": {
      "$deviceId": {
        // Aturan tulis yang ketat: Hanya pemilik kolam yang bisa mengirim perintah.
        ".write": "root.child('devices/' + $deviceId + '/pond_id').exists() && root.child('user_ponds/' + auth.uid + '/' + root.child('devices/' + $deviceId + '/pond_id').val()).exists()",
        // Aturan baca yang lebih longgar: Pengguna terotentikasi dapat membaca status perintah.
        ".read": "auth != null"
      }
    },
    "Historical": {
      "$deviceId": {
        ".read": "auth != null"
      }
    }
  }
}
