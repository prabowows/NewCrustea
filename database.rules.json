{
  "rules": {
    "device_data": {
      "$deviceId": {
        ".read": "auth != null"
      }
    },
    "device_commands": {
      ".write": "auth != null"
    },
    "devices": {
      ".read": "auth != null"
    },
    "pond_devices": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "ponds": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "sc_devices": {
      ".read": "auth != null"
    },
    "user_ponds": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
