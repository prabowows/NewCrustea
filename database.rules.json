{
  "rules": {
    "Device": {
      // Aturan ini mengizinkan pembacaan dan penulisan pada node anak 'Tipe'
      // jika pengguna sudah terotentikasi.
      "Tipe": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "Kolam": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
